      "source": [
        "# 1\n",
        "# I\n",
        "\n",
        "students = {}\n",
        "\n",
        "# II\n",
        "\n",
        "# Function to add a student\n",
        "def add_student():\n",
        "    name = input(\"Enter student name: \")\n",
        "    marks = float(input(\"Enter marks: \"))\n",
        "    students[name] = marks\n",
        "    print(\"Student added successfully!\\n\")\n",
        "\n",
        "# Function to calculate average marks\n",
        "def calculate_average():\n",
        "    if not students:\n",
        "        print(\"No student data available.\\n\")\n",
        "    else:\n",
        "        avg = sum(students.values()) / len(students)\n",
        "        print(f\"Average Marks: {avg}\\n\")\n",
        "\n",
        "# Function to find highest and lowest marks\n",
        "def find_highest_lowest():\n",
        "    if not students:\n",
        "        print(\"No student data available.\\n\")\n",
        "    else:\n",
        "        highest = max(students, key=students.get)\n",
        "        lowest = min(students, key=students.get)\n",
        "        print(f\"Highest Marks: {highest} ({students[highest]})\")\n",
        "        print(f\"Lowest Marks: {lowest} ({students[lowest]})\\n\")\n",
        "\n",
        "# Function to search for a student's marks\n",
        "def search_student():\n",
        "    name = input(\"Enter student name to search: \")\n",
        "    if name in students:\n",
        "        print(f\"{name}'s Marks: {students[name]}\\n\")\n",
        "    else:\n",
        "        print(\"Student not found.\\n\")\n",
        "\n",
        "# III\n",
        "\n",
        "while True:\n",
        "        print(\"----- Student Marks Management -----\")\n",
        "        print(\"1. Add Student\")\n",
        "        print(\"2. Calculate Average Marks\")\n",
        "        print(\"3. Find Highest and Lowest Marks\")\n",
        "        print(\"4. Search Student Marks\")\n",
        "        print(\"5. Exit\")\n",
        "\n",
        "        choice = input(\"Enter your choice (1-5): \")\n",
        "\n",
        "        if choice == \"1\":\n",
        "            add_student()\n",
        "        elif choice == \"2\":\n",
        "            calculate_average()\n",
        "        elif choice == \"3\":\n",
        "            find_highest_lowest()\n",
        "        elif choice == \"4\":\n",
        "            search_student()\n",
        "        elif choice == \"5\":\n",
        "            print(\"Exiting program. Goodbye!\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Invalid choice. Please try again.\\n\")"
      ]
    },
